package com.JavaLive.Session7;

import java.io.File;
import java.util.Scanner;

public class FilesExample {
	public static void main(String[] args) {
		SearchMyFile s = new SearchMyFile();
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the path of the Directory you want to search in........!!!!!!!");
		String filePath = extracted(sc);
		String fileName = "FilesExample.java";
		File file = new File(filePath);
		String[] fileList = file.list();
		System.out.println("Here are the files from the directory....");

		for (String f1 : fileList) {
			System.out.println(f1);
		}
		System.out.println(s.accept(file, fileName));
	}

	private static String extracted(Scanner sc) {
		String fP = sc.nextLine();
		return fP;
	}
}
